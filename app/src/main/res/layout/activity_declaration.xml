<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="50dp"
    android:paddingRight="30dp"
    android:background="@drawable/backgroundmain"
    tools:context=".DeclarationActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Carrier Objective and Declaration"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/objective"
                    android:layout_marginRight="10dp" />

                <EditText
                    android:id="@+id/EntObjective"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Carrier Objective"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/declaration"
                    android:layout_marginRight="10dp" />

                <EditText
                    android:id="@+id/EntDeclaration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Declaration"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/date"
                    android:layout_marginRight="10dp" />

                <EditText
                    android:id="@+id/EntDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Today's Date[YYYY-MM-DD]"
                    android:inputType="date" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/address"
                        android:layout_marginRight="10dp" />

                    <EditText
                        android:id="@+id/EntPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Place"
                        android:inputType="text" />

                </LinearLayout>
                <Button
                    android:id="@+id/DclSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textStyle="bold"
                    android:background="#32CD32"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:text="Submit" />
        </LinearLayout>
</ScrollView>
