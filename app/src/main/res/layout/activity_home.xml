<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidDomInspection -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpage"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="50dp"
        android:paddingRight="30dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/welcome"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:text="Welcome"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/UserIDBox"/>

        <TextView
            android:id="@+id/UserIDBox"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="user_ID"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:text="Build Your Resume"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/BuildHere"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/build"
            android:layout_toRightOf="@id/start"
            android:layout_alignParentRight="true"
            android:layout_below="@id/welcome"
            android:layout_marginTop="70dp"
            />

        <TextView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:text="Download Resume"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/DownloadHere"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/download"
            android:layout_toRightOf="@id/download"
            android:layout_alignParentRight="true"
            android:layout_below="@id/start"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grpName"
            android:layout_below="@id/download"
            android:gravity="center"
            android:textColor="#FFFFCC"
            android:text="RESUME BUILDER PROJECT Group 2"
            android:layout_marginTop="70dp"/>

        <Button
            android:id="@+id/LogoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grpName"
            android:textStyle="bold"
            android:background="#FF0000"
            android:layout_marginTop="50dp"
            android:layout_alignParentBottom="true"
            android:text="LOGOUT" />

    </RelativeLayout>
</ScrollView>